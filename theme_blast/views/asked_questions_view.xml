<odoo>
    <data>

        <record id="asked_questions_form" model="ir.ui.view">
            <field name="name">asked.questions.form</field>
            <field name="model">asked.questions</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="question"/>
                        </group>
                        <group>
                            <field name="answer"/>
                        </group>
                        <field name="blast_configuration_id" invisible="1"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="asked_questions_tree" model="ir.ui.view">
            <field name="name">asked.questions.tree</field>
            <field name="model">asked.questions</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="question"/>
                    <field name="answer"/>
                    <field name="blast_configuration_id" invisible="1"/>
                </tree>
            </field>
        </record>

    </data>
</odoo>